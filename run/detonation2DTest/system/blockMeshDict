FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      blockMeshDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

scale   1;

L   100;
D   50;
N   10;

vertices
(
    (0 0 0)
    ($L 0 0)
    ($L 1 0)
    (0 1 0)
    (0 0 $D)
    ($L 0 $D)
    ($L 1 $D)
    (0 1 $D)
);

blocks
(
    hex (0 1 2 3 4 5 6 7) (#eval "$N*$L" 1 #eval "$N*$D") simpleGrading (1 1 1)
);

edges
(
);

boundary
(
    leftAndRight
    {
        type wall;
        faces
        (
            (0 4 7 3)
            (2 6 5 1)
        );
    }
    topAndBottom
    {
        type wall;
        faces
        (
            (0 3 2 1)
            (4 5 6 7)
        );
    }
    empty
    {
        type empty;
        faces
        (
            (3 7 6 2)
            (1 5 4 0)
        );
    }
);

mergePatchPairs
(
);


