FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      T1;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 1 0 0 0];

internalField   uniform 0;

boundaryField
{
    bottom
    {
        type zeroGradient;
    }
    top
    {
        type            fixedValue;
        value           uniform 0;
    }
    leftAndRight
    {
        type empty;
    }
    frontAndBack
    {
        type empty;
    }
}


