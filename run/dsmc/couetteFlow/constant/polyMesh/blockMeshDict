(
);

boundary
(
    top
    {
        type wall;
        faces ((3 7 6 2));
    }
    bottom
    {
        type wall;
        faces ((1 5 4 0));
    }
    left
    {
        type cyclic;
        faces ((0 4 7 3));
        neighbourPatch right;
    }
    right
    {
        type cyclic;
        faces ((2 6 5 1));
        neighbourPatch left;
    }
    frontAndBack
    {
        type empty;
