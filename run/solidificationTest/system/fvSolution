FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    p
    {
        solver          GAMG;
        smoother        DIC;
        tolerance       1e-6;
        relTol          0.05;
    }

    pFinal
    {
        $p;
        relTol          0;
    }

    Ul
    {
        solver          smoothSolver;
        smoother        symGaussSeidel;
        tolerance       1e-6;
        relTol          0.1;
    }

    UlFinal
    {
        $U;
        relTol          0;
    }

    "phase.*"
    {
        solver          PCG;
        preconditioner  DIC;
        tolerance       1e-6;
        relTol          0.1;
    }
    grain
    {
        solver          PCG;
        preconditioner  DIC;
        tolerance       1e-6;
    }
    concentration
    {
        solver          PBiCG;
        preconditioner  DILU;
        tolerance       1e-6;
        relTol          0.01;
    }

}

PIMPLE
{
    momentumPredictor   no;
    nOuterCorrectors    10;
    nCorrectors         3;
    nNonOrthogonalCorrectors 0;
    correctPhi          no;
    pRefCell            0;
    pRefValue           0;
    frozenFlow          yes;

    nPhaseCorrectors    3;

    residualControl
    {
        phase
        {
            tolerance   1e-4;
            relTol      0;
        }
        concentrationMn
        {
            tolerance   1e-3;
            relTol      0;
        }
        p
        {
            tolerance   1e-3;
            relTol      0;
        }
     }
}

relaxationFactors
{
    equations
    {
        ".*"   1;
    }
}

