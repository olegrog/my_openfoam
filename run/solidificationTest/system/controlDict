FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

application         solidificationFoam;
startFrom           latestTime;
startTime           0;
stopAt              endTime;
endTime             10e-3; //5e-3
deltaT              .2e-5; //.2e-5
writeControl        runTime;
writeInterval       2e-5; //2e-5
purgeWrite          0;
writeFormat         ascii;
writePrecision      8;
writeCompression    on;
timeFormat          fixed;
timePrecision       7;
adjustTimeStep      yes;
maxCo               0.02;
minDeltaT           1e-12;
//maxDeltaT           1e-6;
runTimeModifiable   yes;

