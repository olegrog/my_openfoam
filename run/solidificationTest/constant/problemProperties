FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "constant";
    object      problemProperties;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

// Parameters for directional solidification
undercooling        10;  // 10
tempGradient        5e5; // 5e5
coolingRate         5e3; // 3e3

// Model parameters
interfaceWidth      8e-8; // 6e-8
nAnisotropyModes    4;
anisotropyStrength  0.06;

// Mapping from grain (integer) to clockwise degrees (from -45 to 45)
crystallographicAngles
{
    "-1"            0; // 10;
    "0"             0; // 45;
    "1"             0; // -20;
}

// Initial conditions
frontPosition       0.05;
nSeeds              4;
seedNarrowing       5;
interfaceNarrowing  1;
addRandomSeeds      false;

